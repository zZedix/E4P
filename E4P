#!/bin/bash
# E4P CLI Wrapper Script
# This script provides easy access to the E4P CLI from anywhere

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Change to the E4P directory
cd "$SCRIPT_DIR"

# Run the Python CLI
python3 e4p_cli.py "$@"
